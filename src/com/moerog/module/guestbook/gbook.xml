<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="guestbook">
	<typeAlias alias="guestbook" type="com.moerog.module.guestbook.Guestbook"/>
	 
	<insert id="add" parameterClass="guestbook">
		INSERT INTO moerogGuestBook(gbook_content, gbook_writer)
		VALUES (#gbookContent#, #gbookWriter#)
	</insert>
	
	<select id="list" resultClass="guestbook">
		SELECT gbook_id as gbookId, gbook_datetime as gbookDatetime, gbook_content as gbookContent, gbook_writer as gbookWriter
		FROM moerogGuestBook ORDER BY gbook_id DESC
	</select>
	
	<select id="count" resultClass="int">
		SELECT count(*) FROM moerogGuestBook
	</select>
	
	<delete id="delete" parameterClass="guestbook">
		DELETE FROM moerogGuestBook
		WHERE 1=1
		AND gbook_id = #gbookId#
		AND gbook_writer = #gbookWriter#
	</delete>
	
	<delete id="deleteAll">
		DELETE FROM moerogGuestBook
	</delete>
</sqlMap>